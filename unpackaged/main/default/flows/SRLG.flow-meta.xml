<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>6/12 - AV - Added &quot;Round Up&quot; as our case type to update this flow as well.
This flow is used to update the field: Calling_on_behalf_of_you_or_loved_one__c	on litify_pm__Intake__c to ensure everything works appropriately, since we have deprecated this field and are now using a different one.</description>
    <environments>Default</environments>
    <formulas>
        <name>PrintSelfOrLovedOne</name>
        <dataType>String</dataType>
        <expression>IF(
ISPICKVAL({!$Record.What_is_your_relationship_to_IP_pk__c}, &#39;Self&#39;),
&#39;Self&#39;,
&#39;Loved one&#39;
)</expression>
    </formulas>
    <interviewLabel>SRLG | {!$Flow.CurrentDateTime}</interviewLabel>
    <label>SRLG | Questionnaire | PFAS | Update Self/Loved One Field</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Self_Loved_One_Field</name>
        <label>Update Self/Loved One Field</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <inputAssignments>
            <field>Calling_on_behalf_of_you_or_loved_one__c</field>
            <value>
                <elementReference>PrintSelfOrLovedOne</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Self_Loved_One_Field</targetReference>
        </connector>
        <filterLogic>1 AND (2 OR 3)</filterLogic>
        <filters>
            <field>What_is_your_relationship_to_IP_pk__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>litify_pm__Case_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>a03UJ00000SEzjSYAT</stringValue>
            </value>
        </filters>
        <filters>
            <field>litify_pm__Case_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>a03UJ000003vZnKYAU</stringValue>
            </value>
        </filters>
        <object>litify_pm__Intake__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
    <variables>
        <name>IntakeId</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
    </variables>
</Flow>
