                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>Talcum_Powder__c</object>
        <recordTriggerType>Update</recordTriggerType>
        <scheduledPaths>
            <connector>
                <targetReference>Clear_MMS_on_Parent_Intake</targetReference>
            </connector>
            <pathType>AsyncAfterCommit</pathType>
        </scheduledPaths>
