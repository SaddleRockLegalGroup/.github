            <field>litify_mktgROI__Monthly_Marketing_Spend__c</field>
        </inputAssignments>
        <inputReference>$Record.Intakes__r</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <filterLogic>and</filterLogic>
