        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
    </variables>
    <variables>
        <name>ChatterMessageBodyWithTag</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <value>
            <stringValue>@[{!ChatterGroupId}] {!ChatterMessageBody}</stringValue>
        </value>
    </variables>
</Flow>
