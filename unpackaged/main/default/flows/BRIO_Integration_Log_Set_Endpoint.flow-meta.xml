<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <name>Check_Extracted_Endpoint_Value</name>
        <label>Check Extracted Endpoint Value</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>IS BLANK</defaultConnectorLabel>
        <rules>
            <name>IS_NOT_BLANK</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>fx_extractedCalloutEndpoint</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue></stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Endpoint</targetReference>
            </connector>
            <label>IS NOT BLANK</label>
        </rules>
    </decisions>
    <description>Extracts the endpoint value from the Request__c field and stamps it in Endpoint__c field - type Text(255). Intended for use with Tekmir / easier tracking and reporting of newmatter vs newdocument endpoint as well as Staging vs Prod.</description>
    <environments>Default</environments>
    <formulas>
        <name>fx_extractedCalloutEndpoint</name>
        <dataType>String</dataType>
        <expression>IF(
  CONTAINS({!$Record.Request__c}, &quot;callout:&quot;),
  MID(
    {!$Record.Request__c},
    FIND(&quot;callout:&quot;, {!$Record.Request__c}) + LEN(&quot;callout:&quot;),
    FIND(&quot;,&quot;, {!$Record.Request__c}, FIND(&quot;callout:&quot;, {!$Record.Request__c})) - (FIND(&quot;callout:&quot;, {!$Record.Request__c}) + LEN(&quot;callout:&quot;))
  ),
  &quot;&quot;
)</expression>
    </formulas>
    <interviewLabel>BRIO | Integration Log | Set Endpoint {!$Flow.CurrentDateTime}</interviewLabel>
    <label>BRIO | Integration Log | Set Endpoint</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Endpoint</name>
        <label>Update Endpoint</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>Endpoint__c</field>
            <value>
                <elementReference>fx_extractedCalloutEndpoint</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Check_Extracted_Endpoint_Value</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Name</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Tekmir Callout Log</stringValue>
            </value>
        </filters>
        <filters>
            <field>Level__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>INFO</stringValue>
            </value>
        </filters>
        <object>Integration_Log__c</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
