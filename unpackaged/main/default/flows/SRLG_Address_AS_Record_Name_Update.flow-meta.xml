<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>6/6/2025 LP - updated formula to add category &quot; | &quot;.</description>
    <environments>Default</environments>
    <formulas>
        <name>newName</name>
        <dataType>String</dataType>
        <expression>LEFT(
  TRIM(
    {!$Record.Fx_Category__c} &amp; &quot; | &quot; &amp;
    {!$Record.Client_Address__Street__s} &amp; &quot;, &quot; &amp;
    {!$Record.Client_Address__City__s} &amp; &quot;, &quot; &amp;
   TEXT({!$Record.Client_Address__StateCode__s}) &amp; &quot;, &quot; &amp;
    {!$Record.Client_Address__PostalCode__s}
  ),
  80
)</expression>
    </formulas>
    <interviewLabel>SRLG | Address: AS - Record Name Update {!$Flow.CurrentDateTime}</interviewLabel>
    <label>SRLG | Address: AS - Record Name Update</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Record_Name</name>
        <label>Update Record Name</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <inputAssignments>
            <field>Name</field>
            <value>
                <elementReference>newName</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Record_Name</targetReference>
        </connector>
        <object>srlg_Address__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
