    <formulas>
        <name>formNumberFormatPlus1</name>
        <dataType>String</dataType>
        <expression>IF(
    AND(
        LEFT({!$Record.litify_pm__Phone_Other__c}, 2) = &quot;+1&quot;,
        LEN(
            SUBSTITUTE(
                SUBSTITUTE(
                    SUBSTITUTE(
                        SUBSTITUTE({!$Record.litify_pm__Phone_Other__c}, &quot;(&quot;, &quot;&quot;),
                        &quot;)&quot;, &quot;&quot;
                    ),
                    &quot;-&quot;, &quot;&quot;
                ),
                &quot; &quot;, &quot;&quot;
            )
        ) = 12
    ),
    {!$Record.litify_pm__Phone_Other__c},
    IF(
        AND(
            LEFT({!$Record.litify_pm__Phone_Other__c}, 2) = &quot;+2&quot;,
            LEN(
                SUBSTITUTE(
                    SUBSTITUTE(
                        SUBSTITUTE(
                            SUBSTITUTE({!$Record.litify_pm__Phone_Other__c}, &quot;(&quot;, &quot;&quot;),
                            &quot;)&quot;, &quot;&quot;
                        ),
                        &quot;-&quot;, &quot;&quot;
                    ),
                    &quot; &quot;, &quot;&quot;
                )
            ) = 11
        ),
        &quot;+1&quot; &amp; RIGHT(
            SUBSTITUTE(
                SUBSTITUTE(
                    SUBSTITUTE(
                        SUBSTITUTE({!$Record.litify_pm__Phone_Other__c}, &quot;(&quot;, &quot;&quot;),
                        &quot;)&quot;, &quot;&quot;
                    ),
                    &quot;-&quot;, &quot;&quot;
                ),
                &quot; &quot;, &quot;&quot;
            ),
            10
        ),
        IF(
            LEN(
                SUBSTITUTE(
                    SUBSTITUTE(
                        SUBSTITUTE(
                            SUBSTITUTE({!$Record.litify_pm__Phone_Other__c}, &quot;(&quot;, &quot;&quot;),
                            &quot;)&quot;, &quot;&quot;
                        ),
                        &quot;-&quot;, &quot;&quot;
                    ),
                    &quot; &quot;, &quot;&quot;
                )
            ) = 10,
            &quot;+1&quot; &amp; SUBSTITUTE(
                SUBSTITUTE(
                    SUBSTITUTE(
                        SUBSTITUTE({!$Record.litify_pm__Phone_Other__c}, &quot;(&quot;, &quot;&quot;),
                        &quot;)&quot;, &quot;&quot;
                    ),
                    &quot;-&quot;, &quot;&quot;
                ),
                &quot; &quot;, &quot;&quot;
            ),
            &quot;Invalid Phone Number&quot;
        )
    )
)</expression>
