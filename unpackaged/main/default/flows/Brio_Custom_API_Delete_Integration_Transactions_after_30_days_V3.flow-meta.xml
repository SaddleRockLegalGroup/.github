        <label>Delete these records</label>
        <locationX>176</locationX>
        <locationY>252</locationY>
        <inputReference>$Record</inputReference>
    </recordDeletes>
    <sourceTemplate>brioapi__Brio_Custom_API_Delete_Integration_Transactions_after_x_days</sourceTemplate>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Delete_these_records</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>brioapi__Number_of_days_since_created__c</field>
