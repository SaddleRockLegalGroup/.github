<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <name>Check_Doc_Category</name>
        <label>Check Doc Category</label>
        <locationX>314</locationX>
        <locationY>287</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Is_Retainer</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>fx_isRetainer</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.litify_docs__Document_Category__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Retainer</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Document_Category_to_Retainer</targetReference>
            </connector>
            <label>Is Retainer</label>
        </rules>
        <rules>
            <name>Doc_Cat_Is_NULL</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.litify_docs__Document_Category__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Document_Category_to_Other</targetReference>
            </connector>
            <label>Doc Cat Is NULL</label>
        </rules>
    </decisions>
    <description>When a File Info record is created or updated and FX_Is_Retainer__c = true and Document Category != Retainer, then set Document Category as Retainer.</description>
    <environments>Default</environments>
    <formulas>
        <name>fx_isRetainer</name>
        <dataType>Boolean</dataType>
        <expression>IF(
  LEFT({!$Record.litify_docs__External_ID__c}, 3) = &quot;DB_&quot; ||
  CONTAINS({!$Record.litify_docs__Description_255__c}, &quot;Retainer&quot;) ||
  CONTAINS({!$Record.litify_docs__Description_255__c}, &quot;retainer&quot;) ||
  CONTAINS({!$Record.Name}, &quot;Retainer&quot;) ||
  CONTAINS({!$Record.Name}, &quot;retainer&quot;),
  true,
  false
)</expression>
    </formulas>
    <interviewLabel>BRIO | File Info | Create &amp; Update | Set Doc Category {!$Flow.CurrentDateTime}</interviewLabel>
    <label>BRIO | File Info | Create &amp; Update | Set Doc Category</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Set_Document_Category_to_Other</name>
        <label>Set Document Category to Other</label>
        <locationX>314</locationX>
        <locationY>395</locationY>
        <inputAssignments>
            <field>litify_docs__Document_Category__c</field>
            <value>
                <stringValue>Other</stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>Set_Document_Category_to_Retainer</name>
        <label>Set Document Category to Retainer</label>
        <locationX>50</locationX>
        <locationY>395</locationY>
        <inputAssignments>
            <field>litify_docs__Document_Category__c</field>
            <value>
                <stringValue>Retainer</stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>188</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Check_Doc_Category</targetReference>
        </connector>
        <object>litify_docs__File_Info__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
