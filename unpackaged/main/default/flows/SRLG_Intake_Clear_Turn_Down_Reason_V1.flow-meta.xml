<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <name>Check_if_Status_changed_from_Turned_Down</name>
        <label>Check if Status changed from Turned Down</label>
        <locationX>182</locationX>
        <locationY>323</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>ChangedFromTurnedDown</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record__Prior.litify_pm__Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Turned Down</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Clear_Turn_Down_Reason_Details</targetReference>
            </connector>
            <label>ChangedFromTurnedDown</label>
        </rules>
    </decisions>
    <description>5/27 LP - Added the action to clear sub-sub-status.
Will clear turn down reason &amp; details when switched from turned down and turn down reason is not already blank.</description>
    <environments>Default</environments>
    <interviewLabel>SRLG | Intake | Clear Turn Down Reason   - V1 {!$Flow.CurrentDateTime}</interviewLabel>
    <label>SRLG | Intake | Clear Turn Down Reason &amp; Details, and Sub-Status</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>Will clear out Turn Down Reason &amp; Turn Down Details fields.</description>
        <name>Clear_Turn_Down_Reason_Details</name>
        <label>Clear Turn Down Reason &amp; Details</label>
        <locationX>50</locationX>
        <locationY>431</locationY>
        <inputAssignments>
            <field>Sub_Status__c</field>
            <value>
                <stringValue></stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>litify_pm__Turn_Down_Details__c</field>
            <value>
                <stringValue></stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>litify_pm__Turn_Down_Reason__c</field>
            <value>
                <stringValue></stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>56</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Check_if_Status_changed_from_Turned_Down</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>litify_pm__Status__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>litify_pm__Status__c</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>Turned Down</stringValue>
            </value>
        </filters>
        <filters>
            <field>litify_pm__Turn_Down_Reason__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>litify_pm__Intake__c</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
